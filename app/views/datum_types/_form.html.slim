= simple_form_for @datum_type, :url => formURL do |f|
  = f.error_notification
  .form-inputs
    .field.row
      .small-2.columns.text-right
        = f.label :group
      .small-10.columns
        = f.association :group, collection: @groups, label_method: :name, value_method: :id


    .field.row        
      .small-2.columns.text-right
        = f.label :title
      .small-10.columns
        = f.input :title

    .field.row        
      .small-2.columns.text-right
        = f.label :description
      .small-10.columns
        = f.input :description

  .form-actions
    .field.row.text-center
      = f.button :submit, button_description
